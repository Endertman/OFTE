rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Workshops - lectura pública, escritura solo para usuarios autenticados
    match /workshops/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Inscripciones - escritura pública para formulario, lectura solo para usuarios autenticados
    match /inscriptions/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
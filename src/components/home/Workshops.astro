---
import { getNextWorkshops } from '../../firebase';
import { isWorkshopActive, formatDate } from '../../utils/workshop';
import type { Workshop } from '../../types/workshop';

const workshops = await getNextWorkshops(3);
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12">
      <div class="flex flex-col gap-8">
        <div>
          <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Próximos seminarios</h2>
          <p class="mt-4 text-lg text-primary-950/70 dark:text-primary-200/70">
            Descubre nuestros próximos eventos y reserva tu lugar
          </p>
        </div>

        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {workshops.map((workshop: Workshop) => (
            <div class="flex flex-col gap-4 rounded-2xl border border-primary-200/50 bg-white p-6 dark:border-primary-800/50 dark:bg-primary-950">
              <div class="aspect-w-16 aspect-h-9">
                <img
                  src={workshop.image}
                  alt={workshop.name}
                  class="w-full object-cover rounded-xl"
                />
              </div>
              <div class="flex flex-col gap-2">
                <h3 class="text-xl font-medium">{workshop.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70">{formatDate(workshop.date)}</p>
                <p class="text-primary-950/70 dark:text-primary-200/70">{workshop.location}</p>
              </div>
              <div class="mt-auto flex justify-center gap-4">
                <a
                  href={`/workshops/${workshop.id}`}
                  class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 inline-flex items-center justify-center rounded-full border border-transparent px-16 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
                >
                  Ver más
                </a>
              </div>
              <div class="mt-auto flex justify-center gap-4">
                {isWorkshopActive(workshop.date) && (
                  <a
                    href={`/workshops/${workshop.id}`}
                    class="bg-white dark:bg-primary-900 hover:bg-gray-50 dark:hover:bg-primary-800 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 inline-flex items-center justify-center rounded-full border border-primary-600 dark:border-primary-400 px-14 py-3 text-base font-medium text-primary-600 dark:text-primary-400 transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
                  >
                    Inscribirse
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

